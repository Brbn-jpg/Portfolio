---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#0a0f1a] text-slate-300 selection:bg-green-500/30 selection:text-green-200">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Brbn-jpg - Backend Developer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans relative min-h-screen">
    <div class="fixed inset-0 z-0 pointer-events-none opacity-10" 
          style="background-image: radial-gradient(#22c55e 1px, transparent 1px); background-size: 40px 40px;">
    </div>
		<slot />
	</body>
</html>

<style is:global>
  .font-mono { font-family: 'JetBrains Mono', monospace; }
</style>