---
import { allProjects } from '../../data/projects';
import Layout from '../../layouts/layout.astro';
import { Github, ArrowRight, ArrowLeft } from 'lucide-react';

export async function getStaticPaths() {
  return allProjects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const projectComponents = import.meta.glob('../../components/project-details/*.astro', { eager: true });
const componentPath = `../../components/project-details/${project.name}.astro`;
const projectModule: any = projectComponents[componentPath];
const ProjectComponent = projectModule ? projectModule.default : undefined;

---
<Layout title={`${project.name} | Project Details`}>
  <main class="relative z-10 max-w-4xl mx-auto px-6 py-12 md:py-20">
    <div class="mb-8">
      <a href="/#repositories" class="flex items-center gap-2 text-slate-400 hover:text-green-400 transition-colors font-mono text-sm">
        <ArrowLeft size={16} />
        Back to all projects
      </a>
    </div>

    <header class="mb-12 border-b border-slate-800 pb-8">
      <h1 class="text-5xl md:text-6xl font-black text-slate-100 mb-4 tracking-tight">{project.name}</h1>
      <div class="flex items-center justify-between">
        <div class="text-sm font-mono text-slate-500">
          Language(s): <span class="text-slate-300">{project.lang}</span>
        </div>
        <div class="flex items-center gap-4">
          {project.links.demo && (
            <a href={project.links.demo} target="_blank" rel="noreferrer" class="flex items-center gap-2 border border-slate-700 text-slate-300 px-4 py-2 font-bold hover:border-green-500 hover:text-green-400 transition-colors rounded-sm text-sm">
              <ArrowRight size={16} /> Live Demo
            </a>
          )}
          <a href={project.links.github} target="_blank" rel="noreferrer" 
             class="flex items-center gap-2 bg-slate-800 text-slate-300 px-4 py-2 font-bold hover:bg-green-500/20 hover:text-green-300 transition-colors rounded-sm text-sm">
            <Github size={16} />
            View on GitHub
          </a>
        </div>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="md:col-span-2">
        {project.links.demo && (
          <div class="mb-8 p-4 border border-amber-500/30 bg-amber-500/10 rounded-sm text-amber-300 text-sm font-mono leading-relaxed">
            <span class="font-bold">[ATTENTION]</span> The backend for this project is hosted on a free-tier service. It may take a moment to wake up after the first request.
          </div>
        )}
        
        {ProjectComponent ? (
          <ProjectComponent />
        ) : (
          <p class="text-slate-400 leading-relaxed">{project.longDescription}</p>
        )}
      </div>
      <div class="md:col-span-1">
        <h3 class="text-slate-100 font-bold mb-4 flex items-center gap-2 font-mono text-lg tracking-tight">
          Technologies Used
        </h3>
        <div class="flex flex-wrap gap-2">
          {project.technologies.map(tech => (
            <span class="bg-slate-900 border border-slate-700 px-3 py-1 text-xs text-slate-300 font-mono rounded">{tech}</span>
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>
