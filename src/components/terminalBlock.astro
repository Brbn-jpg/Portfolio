<div class="bg-slate-900 rounded-lg border border-slate-700 p-4 font-mono text-sm shadow-2xl mb-12 w-full max-w-2xl mx-auto text-left h-[220px] flex flex-col">
  <div class="flex gap-2 mb-4 border-b border-slate-800 pb-2 flex-shrink-0">
    <div class="w-3 h-3 rounded-full bg-red-500"></div>
    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
    <div class="w-3 h-3 rounded-full bg-green-500"></div>
  </div>
  
  <div id="terminal-content" class="space-y-1 text-slate-300 overflow-y-auto flex-grow custom-scrollbar"></div>
  
  <div class="animate-pulse text-green-400 mt-1 flex-shrink-0">_</div>
</div>

<script>
  const lines = [
    "> initializing_system...",
    "> loading_modules: [Java, Spring, Langchain4j]",
    "> status: ONLINE",
    "> focus: RAG & Backend Architecture"
  ];

  const container = document.getElementById('terminal-content');
  
  const typeLine = async (text: string) => {
    if (!container) return;

    const lineDiv = document.createElement('div');
    
    const prompt = document.createElement('span');
    prompt.className = 'text-green-400 mr-2';
    prompt.textContent = '$';
    
    const content = document.createElement('span');
    
    lineDiv.appendChild(prompt);
    lineDiv.appendChild(content);
    container.appendChild(lineDiv);
    
    // Auto-scroll to bottom as text is typed
    container.scrollTop = container.scrollHeight;
    
    for (let i = 0; i < text.length; i++) {
      content.textContent += text[i];
      container.scrollTop = container.scrollHeight;
      await new Promise(r => setTimeout(r, 20 + Math.random() * 30));
    }
  };

  const runTerminal = async () => {
    if (!container) return;
    container.innerHTML = ''; 
    
    await new Promise(r => setTimeout(r, 500));

    for (const line of lines) {
      await typeLine(line);
      await new Promise(r => setTimeout(r, 400));
    }
  };

  runTerminal();
</script>